{
  "dashboard": {
    "title": "Ecommerce - Business Metrics",
    "tags": ["ecommerce", "business", "kpi"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Revenue - Last 24 Hours",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(ecommerce_order_total_amount_sum[24h]))",
            "legendFormat": "Total Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10000, "color": "yellow"},
                {"value": 50000, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Orders - Last 24 Hours",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(ecommerce_orders_total[24h]))",
            "legendFormat": "Total Orders"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Conversion Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "(sum(rate(ecommerce_checkout_completed_total[1h])) / sum(rate(ecommerce_product_views_total[1h]))) * 100",
            "legendFormat": "Conversion Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Cart Abandonment Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "(1 - (sum(rate(ecommerce_checkout_completed_total[1h])) / sum(rate(ecommerce_cart_created_total[1h])))) * 100",
            "legendFormat": "Abandonment Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 70, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Revenue Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(ecommerce_order_total_amount_sum[5m])) * 300",
            "legendFormat": "Revenue per 5min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 6,
        "title": "Orders by Status",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (status) (ecommerce_orders_by_status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Average Order Value",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(ecommerce_order_total_amount_sum[5m])) / sum(rate(ecommerce_orders_total[5m]))",
            "legendFormat": "AOV"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 8,
        "title": "Top Products by Revenue",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "topk(10, sum by (product_sku) (increase(ecommerce_product_revenue[24h])))",
            "legendFormat": "{{product_sku}}",
            "format": "table",
            "instant": true
          }
        ]
      },
      {
        "id": 9,
        "title": "Active Carts",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "sum(ecommerce_active_carts)",
            "legendFormat": "Active Carts"
          }
        ]
      },
      {
        "id": 10,
        "title": "Product Search Queries",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "sum(rate(ecommerce_search_queries_total[1h]))",
            "legendFormat": "Searches/hour"
          }
        ]
      },
      {
        "id": 11,
        "title": "Failed Payments",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(ecommerce_payment_failed_total[1h]))",
            "legendFormat": "Failed Payments"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "New User Registrations",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "sum(increase(ecommerce_user_registrations_total[24h]))",
            "legendFormat": "New Users (24h)"
          }
        ]
      }
    ]
  }
}
